@using Bravado.Models
@model Bravado.Models.Agile.Task
@{
    ViewData["Title"] = "Edit Task";
}

<div class="container">
  <form method="post">
    <div class="row">
      <div class="col-md-6">
            <label asp-for="Title" class="control-label"></label>
            <input asp-for="Title" Model.Title required>
      </div>
      <div class="col-md-6">
            <label>Due Date</label>
            <input asp-for="DueDate" class="form-control" id="datepicker" />
        </div>
    </div>
      <input hidden asp-for="Id" Model.Id>
      <input hidden asp-for="BoardId" Model.BoardId>
      <input asp-for="Description" class="textarea" Model.Description>
      <br/>
      <select class="browser-default" asp-for="ListNum"required Model.ListNum>
        <option value="" disabled>Choose the starting list for this task</option>
        <option value="1">To Do</option>
        <option value="2">In Progress</option>
        <option value="3">Done</option>
      </select>
      <hr/>
      <button asp-route-id="Model.BoardId" class="btn center-align" type="submit">
        Update <i class="fa fa-floppy-o" aria-hidden="true"></i>
      </button>
  </form>
</div>


<script>  $(document).ready(function() {
    M.updateTextFields();
  });</script>
@using Bravado.Models
@using System.Collections.Generic
@model Bravado.Models.Agile.Task
@{
    ViewData["Title"] = "Task: " + Model.Title;
}
<div>
    <a  asp-action=Delete asp-route-id="@Model.Id" class="waves-effect waves-light red btn"> Delete <i class="material-icons">delete</i></a>
</div>
   <div class="fixed-action-btn">
    <a asp-action=Edit asp-controller="Tasks" asp-route-id="@Model.Id" class="btn-floating btn-large waves-effect waves-light yellow"><i class="large material-icons">edit</i></a>
   </div>

<div class="container">
<ul class="collection">
    <li class="collection-item avatar">
        <span class="title"><h3>Description</h3></span>
        <p> @Model.Description</p>
    </li>
    <li class="collection-item avatar">
        <span class="title"><h3>Due Date</h3></span>
        <p> @Model.DueDate.ToString() </p>
    </li> 
</ul>
</div>
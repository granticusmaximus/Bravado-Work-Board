@using Bravado.Models
@using System.Collections.Generic
@model Bravado.ViewModel.TaskViewModels.TaskDetails
@{
    ViewData["Title"] = "Task: " + Model.Task.Title;
}
<a asp-action=Open asp-controller=Boards asp-route-id="@Model.Board.Id" class="btn btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i> Return to Board</a>

<div class="container">
    <h2>Task For:</h2>
    <p>@Model.Task.Title</p>
    <div class="openTask">
        <span class="title"><h3>Description</h3></span>
        <p>@Html.Raw(Model.Task.Description)</p>
        <span class="title"><h3>Due Date</h3></span>
        <p> @Model.Task.DueDate.ToString("dd-MMM-yyyy") </p>
    </div>
    <hr/>
<div>
    <a  asp-action=Edit asp-controller="Tasks" asp-route-id="@Model.Task.Id" class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"> Edit</i></a>
    <a  asp-action=Delete asp-route-id="@Model.Task.Id" class="btn btn-danger"><i class="fa fa-close"> Delete</i></a>
</div>

</div>
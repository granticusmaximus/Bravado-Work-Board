@using Bravado.Models
@using System.Collections.Generic
@model Bravado.ViewModel.TaskViewModels.TaskDetails
@{
    ViewData["Title"] = "Task: " + Model.Task.Title;
}
<div>
    <a  asp-action=Delete asp-route-id="@Model.Task.Id" class="waves-effect waves-light red btn"> Delete <i class="fa fa-close"></i></a>
</div>
   <div class="fixed-action-btn">
    <a asp-action=Edit asp-controller="Tasks" asp-route-id="@Model.Task.Id" class="btn-floating btn-large waves-effect waves-light yellow"><i class="fa fa-pencil-square-o" aria-hidden="true"></i></a>
   </div>

<div class="container">
<ul class="collection">
    <li class="collection-item avatar">
        <span class="title"><h3>Description</h3></span>
        <p> @Model.Task.Description.ToString()</p>
    </li>
    <li class="collection-item avatar">
        <span class="title"><h3>Due Date</h3></span>
        <p> @Model.Task.DueDate.ToString("dd-MMM-yyyy") </p>
    </li>
</ul>
<a asp-action=Open asp-controller=Boards asp-route-id="@Model.Board.Id" class="btn-large waves-effect center-align" > Return to Board <i class="fa fa-arrow-left" aria-hidden="true"></i></a>
</div>
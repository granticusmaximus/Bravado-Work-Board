@using Bravado.Models
@using System.Collections.Generic
@using Bravado.ViewModel.TaskViewModels
@model TaskCommentForm

@{
    ViewData["Title"] = "Task: " + Model.Task.Title;
}
<a asp-action=Open asp-controller=Boards asp-route-id="@Model.Board.Id" class="btn btn-primary"><i class="fa fa-arrow-left" aria-hidden="true"></i> Return to Board</a>

<div class="container">
    <h2>Task For:</h2>
    <p>@Model.Task.Title</p>
    <div class="openTask">
        <span class="title"><h3>Description</h3></span>
        <p>@Html.Raw(Model.Task.Description)</p>
        <span class="title"><h3>Due Date</h3></span>
        @if (@Model.Task.DaysOverDue > 0)
        {
            <p bgcolor="#FF0000 !important"><font color="white">@Model.Task.DaysOverDue.ToString( @Model.Task.DaysOverDue + " " + "Overdue")</font></p>
        }
        else
        {
            <p>@Model.Task.DueDate.ToString("dd-MMM-yyyy")</p>
        }
    </div>
    <br />
    <div>
        <a  asp-action=Edit asp-controller="Tasks" asp-route-id="@Model.Task.Id" class="btn btn-warning"><i class="fa fa-pencil-square-o" aria-hidden="true"> Edit</i></a>
        <a  asp-action=Delete asp-route-id="@Model.Task.Id" class="btn btn-danger"><i class="fa fa-close"> Delete</i></a>
    </div>
</div>
<hr />
<div class="containter">
    <!-- Button trigger modal -->
    <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#exampleModalLong">
        Add Commemnt 
    </button>
    <!--Previously added Comments Area-->
    @foreach (var comment in Model.TaskComments)
        {
            <li class="collection-item">
                <div class="card hoverable blue-grey">
                    <div class="card-content white-text activator">
                        <span class="card-title center-align"> @comment.CommentTitle</span>
                        <br>
                        <p> @comment.CommentDueDate.ToString("dd-MMM-yyyy") </p>
                        <br>
                        <p>@comment.Comment</p>
                    </div>
                </div>
            </li>
        }
    <!-- Modal -->
    <div class="modal fade" id="exampleModalLong" tabindex="-1" role="dialog" aria-labelledby="exampleModalLongTitle" aria-hidden="true">
        <div class="modal-dialog" role="document">
            <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLongTitle">Task Comment</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <form asp-action="AddTaskComment" method="post">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="row">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TaskComment.CommentTitle" class="control-label"></label>
                                <input asp-for="TaskComment.CommentTitle" class="form-control" />
                                <span asp-validation-for="TaskComment.CommentTitle" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="TaskComment.CommentDueDate" class="control-label"></label>
                                <input asp-for="TaskComment.CommentDueDate" class="form-control" id="datepicker" />
                                <span asp-validation-for="TaskComment.CommentDueDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="TaskComment.Comment" class="control-label"></label>
                                <textarea cols="250" asp-for="TaskComment.Comment" class="textarea" placeholder="Place some text here"
                                        style="height: 550px; font-size: 14px; line-height: 18px; border: 1px solid #dddddd; border-radius:3px; padding: 10px;"></textarea>
                                <span asp-validation-for="TaskComment.Comment" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-primary">Save changes</button>
                </form>
            </div>
            </div>
        </div>
    </div>
    @*Previously added comments will display here*@
</div>

<br />
<br />

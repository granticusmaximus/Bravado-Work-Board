@model Bravado.ViewModel.AgileViewModels.BoardView

@{
    ViewData["Title"] = "Work Board Details";
}
<script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf 

@functions { 
    public string GetAntiXsrfRequestToken() 
    { 
        return Xsrf.GetAndStoreTokens(Context).RequestToken;
    } 
}

<input type="hidden" 
    id="RequestVarificationToken" 
    name="RequestVarificationToken" 
    value="@GetAntiXsrfRequestToken()">

<script>
    $(document).ready(function () {
        $("#sortable").sortable({
            update: function(event, ui) {
                var itemIds = "";
                var boardIds = "";  
            }
        })
    })
</script>

<script>
    $(function () {
        $(".draggable").draggable({
            revert: "invalid"
        });

        $('.taskCol').droppable({ 
            accept: '.draggable', 
            drop: function (event, ui) { 
                var dropped = ui.draggable; 
                var droppedOn = $(this); 
                $(dropped).detach().css({ top: 0, left: 0 }).appendTo(droppedOn); 
            
                $.ajax({ 
                    type: "POST",
                    dataType: "json",
                    contentType: "application/json", 
                    url: "/Agile/movecard",
                    beforeSend: function (request) {
                        request.setRequestHeader(
                            "RequestVarificationToken", $('#RequestVarificationToken').val());
                    }, 
                    data: JSON.stringify({ cardId: dropped[0].id, columnId: droppedOn[0].id }),  
                });
            }
        });
    });
</script>

<div class="container">

        @if (Model.Columns.Count >= 0)
        {
            <div>
                <a asp-controller="Agile"
                   asp-action="AddCard"
                   asp-route-id="@Model.Id"
                   class="btn btn-warning">
                    Add A Card
                </a>
            </div>

            <div>
                <a asp-controller="Agile"
                   asp-action="CardLocationUpdate"
                   class="btn btn-primary">
                    Update
                </a>
            </div>
        }

        <hr/>

    <div class="row">

        

        @foreach (var column in Model.Columns)
        {
            <div class="col m2">
                <div class="taskColHeader"><h3>@column.Title</h3></div>

                <div class="taskCol droppable" style="min-height: 600px;" id="@column.Id">

                    @foreach (var card in column.Cards)
                    {
                        <div class="card blue-grey darken-1 draggable" style="cursor: pointer;">
                            <div class="card-content white-text">
                                <p>
                                    <a asp-controller="Agile" asp-action="CardDetails" 
                                    asp-route-id="@card.Id" class="white-text taskSingle" id="task@(card.Id)" data-taskid="@(card.Id)"> 
                                        @card.Content
                                    </a>
                                </p>
                                
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
    </div>
</div>


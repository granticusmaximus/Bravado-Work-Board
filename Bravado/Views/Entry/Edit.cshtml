@model Bravado.Models.Entry

@{ ViewData["Title"] = "Edit"; }

<h1>Edit</h1>

<h4>Entry</h4>
<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ContentID" />
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">

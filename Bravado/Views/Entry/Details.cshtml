@model Bravado.Models.Entry

@{ ViewData["Title"] = "Details"; }

<h1>@Html.DisplayFor(model => model.Title)</h1>

<div>
    <h4>@Html.DisplayFor(model => model.DateCreated)</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            @Html.Raw(Model.Description)
        </dd>
    </dl>


</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.ContentID">Edit</a> |
    <a asp-action="Delete" asp-route-id="@Model.ContentID">Delete</a> |
    <a asp-action="Index">Back to List</a>
</div>

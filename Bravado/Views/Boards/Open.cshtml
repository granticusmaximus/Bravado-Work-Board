@using Bravado.Models.BoardViewModels
@using System.Collections.Generic
@model BoardView

@{
    ViewData["Title"] = $"{Model.Board.Title}";
}


<div class=row>
    <div>
        <a asp-action=Add asp-controller="Tasks" asp-route-id="@Model.Board.Id" class="btn btn-success">New Task <i class="fa fa-plus" aria-hidden="true"></i></a> |
        <a asp-action=Edit asp-route-id="@Model.Board.Id" class="btn btn-warning"> Edit Board <i class="fa fa-cog" aria-hidden="true"></i></a> |
        <a asp-action=Delete asp-route-id="@Model.Board.Id" class="btn btn-danger"> Delete Board <i class="fa fa-times" aria-hidden="true"></i></a>

    </div>
</div>
<hr />
<div class="row">
    <ul class="collection with-header col s12 m4 l4">
        <li class="collection-header center">
            <h4>To Do</h4>
        </li>
        @foreach (var task in Model.TaskL1)
        {
            <li class="collection-item ">
                <div class="card hoverable blue-grey">
                    <div class="card-content white-text activator">
                        <span class="card-title center-align"> @task.Title </span>
                        <span class="card-title center-align"> @task.Priority </span>
                        <br>
                        <center>
                            <a asp-controller="Tasks" asp-action="Open" asp-route-id="@task.Id" class="waves-effect waves-light btn-small center-align">
                                open
                                <i class="fa fa-envelope-open-o" aria-hidden="true"></i>
                            </a>
                        </center>
                    </div>
                    <div class="card-reveal blue-grey white-text">
                        <span class="card-title white-text text-darken-4 center-align">@task.Title<i class="fa fa-times" aria-hidden="true"></i></span>
                        <p class="flow-text">@task.Description</p>
                        <a asp-controller="Tasks" asp-action="Open" asp-route-id="@task.Id" class="waves-effect waves-light btn-small center-align">
                            open
                            <i class="fa fa-envelope-open-o" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
            </li>
        }
    </ul>
    <ul class="collection with-header col s12 m4 l4">
        <li class="collection-header center">
            <h4>In Progress</h4>
        </li>
        @foreach (var task in Model.TaskL2)
        {
            <li class="collection-item">
                <div class="card hoverable blue-grey">
                    <div class="card-content white-text activator">
                        <span class="card-title center-align"> @task.Title </span>
                        <span class="card-title center-align"> @task.Priority </span>
                        <br>
                        <center>
                            <a asp-controller="Tasks" asp-action="Open" asp-route-id="@task.Id" class="waves-effect waves-light btn-small center-align">
                                open
                                <i class="fa fa-envelope-open-o" aria-hidden="true"></i>
                            </a>
                        </center>
                    </div>
                    <div class="card-reveal blue-grey white-text">
                        <span class="card-title white-text text-darken-4 center-align">@task.Title<i class="fa fa-times" aria-hidden="true"></i></span>
                        <p class="flow-text">@task.Description</p>
                        <a asp-controller="Tasks" asp-action="Open" asp-route-id="@task.Id" class="waves-effect waves-light btn-small center-align">
                            open
                            <i class="fa fa-envelope-open-o" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
            </li>
        }
    </ul>
    <ul class="collection with-header col s12 m4 l4">
        <li class="collection-header center">
            <h4>Done</h4>
        </li>
        @foreach (var task in Model.TaskL3)
        {
            <li class="collection-item">
                <div class="card hoverable blue-grey">
                    <div class="card-content white-text activator">
                        <span class="card-title center-align"> @task.Title </span>
                        <span class="card-title center-align"> @task.Priority </span>
                        <br>
                        <center>
                            <a asp-controller="Tasks" asp-action="Open" asp-route-id="@task.Id" class="waves-effect waves-light btn-small center-align">
                                open
                                <i class="fa fa-envelope-open-o" aria-hidden="true"></i>
                            </a>
                        </center>
                    </div>
                    <div class="card-reveal blue-grey white-text">
                        <span class="card-title white-text text-darken-4 center-align">@task.Title<i class="fa fa-times" aria-hidden="true"></i></span>
                        <p class="flow-text">@task.Description</p>
                        <a asp-controller="Tasks" asp-action="Open" asp-route-id="@task.Id" class="waves-effect waves-light btn-small center-align">
                            open
                            <i class="fa fa-envelope-open-o" aria-hidden="true"></i>
                        </a>
                    </div>
                </div>
            </li>
        }
    </ul>
</div>
<br />
<hr />